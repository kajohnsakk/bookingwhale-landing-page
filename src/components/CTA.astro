---

<!-- CTA Section - Enhanced with Interactive Elements -->
<section class="bg-white pb-12 lg:pb-16">
  <div class="container-tight">
    <div
      class="bg-gray-900 rounded-2xl lg:rounded-3xl p-6 sm:p-8 lg:p-12 max-w-6xl mx-auto relative overflow-hidden min-h-[120px] sm:min-h-[140px] lg:min-h-[160px] group"
    >
      <!-- Animated Background Gradient -->
      <div
        class="absolute inset-0 bg-gradient-to-r from-blue-900/20 via-purple-900/20 to-blue-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-700"
      >
      </div>

      <!-- Floating Particles Animation -->
      <div class="absolute inset-0 pointer-events-none">
        <div
          class="absolute top-4 right-12 w-2 h-2 bg-blue-400 rounded-full animate-ping opacity-30"
        >
        </div>
        <div
          class="absolute top-8 right-20 w-1 h-1 bg-green-400 rounded-full animate-pulse opacity-40"
        >
        </div>
        <div
          class="absolute bottom-6 right-16 w-1.5 h-1.5 bg-purple-400 rounded-full animate-bounce opacity-35"
        >
        </div>
        <div
          class="absolute top-12 left-1/2 w-1 h-1 bg-yellow-400 rounded-full animate-pulse opacity-30"
        >
        </div>
      </div>

      <!-- Large Background illustration - Left Side -->
      <div
        class="absolute left-0 top-0 w-32 sm:w-48 lg:w-64 xl:w-80 h-full opacity-15 sm:opacity-20 pointer-events-none group-hover:opacity-25 transition-opacity duration-500"
      >
        <svg
          class="w-full h-full"
          viewBox="0 0 300 140"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <!-- Main Phone mockup - Larger -->
          <rect
            x="20"
            y="15"
            width="70"
            height="110"
            rx="12"
            fill="white"
            opacity="0.5"></rect>
          <rect
            x="30"
            y="30"
            width="50"
            height="8"
            rx="4"
            fill="white"
            opacity="0.6"></rect>
          <rect
            x="30"
            y="45"
            width="35"
            height="6"
            rx="3"
            fill="white"
            opacity="0.6"></rect>
          <rect
            x="30"
            y="55"
            width="45"
            height="6"
            rx="3"
            fill="white"
            opacity="0.6"></rect>
          <circle cx="55" cy="80" r="12" fill="white" opacity="0.6"></circle>
          <rect
            x="35"
            y="105"
            width="40"
            height="10"
            rx="5"
            fill="white"
            opacity="0.7"></rect>

          <!-- Secondary smaller phone -->
          <rect
            x="110"
            y="35"
            width="45"
            height="70"
            rx="8"
            fill="white"
            opacity="0.3"></rect>
          <rect
            x="118"
            y="45"
            width="30"
            height="4"
            rx="2"
            fill="white"
            opacity="0.4"></rect>
          <rect
            x="118"
            y="52"
            width="20"
            height="3"
            rx="1.5"
            fill="white"
            opacity="0.4"></rect>
          <circle cx="133" cy="70" r="8" fill="white" opacity="0.4"></circle>
          <rect
            x="123"
            y="85"
            width="20"
            height="6"
            rx="3"
            fill="white"
            opacity="0.5"></rect>

          <!-- Floating UI elements -->
          <circle cx="170" cy="30" r="6" fill="white" opacity="0.4"></circle>
          <circle cx="190" cy="60" r="4" fill="white" opacity="0.4"></circle>
          <circle cx="160" cy="90" r="3" fill="white" opacity="0.4"></circle>
          <circle cx="180" cy="110" r="5" fill="white" opacity="0.4"></circle>

          <!-- Check marks and success indicators -->
          <path
            d="M175 45L178 48L185 41"
            stroke="white"
            stroke-width="3"
            stroke-linecap="round"
            stroke-linejoin="round"
            opacity="0.6"></path>
          <path
            d="M195 75L198 78L205 71"
            stroke="white"
            stroke-width="3"
            stroke-linecap="round"
            stroke-linejoin="round"
            opacity="0.6"></path>
          <path
            d="M165 115L168 118L175 111"
            stroke="white"
            stroke-width="3"
            stroke-linecap="round"
            stroke-linejoin="round"
            opacity="0.6"></path>

          <!-- App interface lines -->
          <rect
            x="200"
            y="40"
            width="35"
            height="4"
            rx="2"
            fill="white"
            opacity="0.3"></rect>
          <rect
            x="200"
            y="48"
            width="25"
            height="4"
            rx="2"
            fill="white"
            opacity="0.3"></rect>
          <rect
            x="200"
            y="56"
            width="40"
            height="4"
            rx="2"
            fill="white"
            opacity="0.3"></rect>
          <rect
            x="200"
            y="70"
            width="30"
            height="4"
            rx="2"
            fill="white"
            opacity="0.3"></rect>
          <rect
            x="200"
            y="78"
            width="35"
            height="4"
            rx="2"
            fill="white"
            opacity="0.3"></rect>

          <!-- Decorative dots pattern -->
          <circle cx="250" cy="25" r="2" fill="white" opacity="0.3"></circle>
          <circle cx="260" cy="35" r="2" fill="white" opacity="0.3"></circle>
          <circle cx="270" cy="45" r="2" fill="white" opacity="0.3"></circle>
          <circle cx="250" cy="85" r="2" fill="white" opacity="0.3"></circle>
          <circle cx="260" cy="95" r="2" fill="white" opacity="0.3"></circle>
          <circle cx="270" cy="105" r="2" fill="white" opacity="0.3"></circle>
        </svg>
      </div>

      <!-- Subtle Border Glow -->
      <div
        class="absolute inset-0 rounded-2xl lg:rounded-3xl border border-gray-700 group-hover:border-blue-500/30 transition-colors duration-500"
      >
      </div>

      <div
        class="flex flex-col sm:flex-row items-center justify-between gap-6 relative z-10"
      >
        <div class="text-center sm:text-left flex-1">
          <h3
            class="text-xl sm:text-2xl lg:text-3xl xl:text-4xl font-bold text-white mb-2 sm:mb-3 transition-colors duration-300"
            data-translate="startFree"
          >
            เริ่มใช้ BookingWhale ฟรี
          </h3>
          <p
            class="text-gray-300 text-sm sm:text-base lg:text-lg leading-relaxed transition-colors duration-300"
            data-translate="freeDescription"
          >
            ไม่มีค่าเริ่มต้น ไม่ผูกสัญญา ยกเลิกได้ตลอดเวลา
          </p>
        </div>

        <div class="flex-shrink-0">
          <button
            onclick="openBookingModal()"
            class="group/btn text-white px-6 py-3 sm:px-8 sm:py-3 lg:px-10 lg:py-4 rounded-lg sm:rounded-xl transition-all duration-300 font-semibold sm:font-bold text-base sm:text-lg shadow-lg sm:shadow-xl hover:shadow-2xl transform hover:scale-105 relative overflow-hidden"
            style="background-color: #0047ff; --tw-shadow-color: #0047ff;"
            data-translate="startFreeToday"
          >
            <!-- Button shine effect -->
            <div
              class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover/btn:translate-x-full transition-transform duration-700"
            >
            </div>

            <span class="flex items-center justify-center gap-2 relative z-10">
              ลองใช้ฟรี
              <svg
                class="w-4 h-4 sm:w-5 sm:h-5 transform group-hover/btn:translate-x-1 transition-transform duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
