<section class="relative pt-28 pb-20 overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 overflow-hidden">
    <!-- Enhanced Floating Orbs with magical glow -->
    <div class="absolute top-20 left-10 w-72 h-72 bg-blue-400/20 rounded-full mix-blend-multiply filter blur-xl animate-blob-slow magical-glow magical-glow-blue"></div>
    <div class="absolute top-20 right-10 w-72 h-72 bg-purple-400/20 rounded-full mix-blend-multiply filter blur-xl animate-blob-slow animation-delay-2000 magical-glow magical-glow-purple"></div>
    <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-400/20 rounded-full mix-blend-multiply filter blur-xl animate-blob-slow animation-delay-4000 magical-glow magical-glow-pink"></div>
    <div class="absolute top-1/2 left-1/2 w-96 h-96 bg-indigo-300/10 rounded-full mix-blend-multiply filter blur-2xl animate-pulse-slow animation-delay-1000"></div>
    
    <!-- Animated Grid Pattern with wave effect -->
    <div class="absolute inset-0 bg-grid-slate-100 bg-[size:60px_60px] opacity-30 animate-grid-wave"></div>
    
    <!-- Enhanced Floating Particles System -->
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-blue-400 rounded-full animate-particle-float animation-delay-500 opacity-60 particle-trail"></div>
    <div class="absolute top-3/4 right-1/4 w-3 h-3 bg-purple-400 rounded-full animate-particle-float animation-delay-3000 opacity-40 particle-trail"></div>
    <div class="absolute top-1/2 right-1/3 w-1 h-1 bg-pink-400 rounded-full animate-particle-float animation-delay-1500 opacity-80 particle-trail"></div>
    <div class="absolute top-1/3 left-1/2 w-2 h-2 bg-indigo-400 rounded-full animate-particle-float animation-delay-2500 opacity-50 particle-trail"></div>
    <div class="absolute bottom-1/4 left-1/3 w-1.5 h-1.5 bg-emerald-400 rounded-full animate-particle-float animation-delay-4500 opacity-70 particle-trail"></div>
    
    <!-- Animated light rays -->
    <div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-blue-200/30 to-transparent animate-light-ray animation-delay-1000"></div>
    <div class="absolute top-0 right-1/3 w-px h-full bg-gradient-to-b from-transparent via-purple-200/30 to-transparent animate-light-ray animation-delay-3000"></div>
  </div>
  
  <div class="container mx-auto px-4 relative">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="space-y-6 lg:space-y-8 animate-slide-up order-2 lg:order-1">
        
        <div class="space-y-4 lg:space-y-6">
          <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold text-gray-900 leading-tight">
            <span data-translate="heroTitle">Book Services</span>
            <span class="relative block">
              <span data-translate="heroSubtitle" class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent animate-gradient">
                Seamlessly
              </span>
              <svg class="absolute -bottom-2 left-0 w-full h-3 text-blue-200" viewBox="0 0 400 12" fill="none">
                <path d="M0 6C100 2 200 10 400 6" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
              </svg>
            </span>
          </h1>
          <p data-translate="heroDescription" class="text-lg sm:text-xl lg:text-2xl text-gray-600 leading-relaxed max-w-2xl">
            The ultimate booking platform for 
            <span class="font-semibold text-gray-800">Personal Trainers</span>, 
            <span class="font-semibold text-gray-800">Retail</span>, 
            <span class="font-semibold text-gray-800">Events</span>, and more.
            <br>
            <span data-translate="heroTagline" class="text-base lg:text-lg text-gray-500">Enterprise-grade. Simple to use.</span>
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <button 
            onclick="openBookingModal()"
            data-translate="startBookingNow"
            class="group bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-2xl hover:shadow-2xl hover:shadow-blue-500/25 transition-all duration-300 font-semibold text-base sm:text-lg transform hover:-translate-y-1 relative overflow-hidden"
          >
            <span class="relative z-10 flex items-center justify-center space-x-2">
              <span>Start Booking Now</span>
              <svg class="w-4 h-4 sm:w-5 sm:h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-blue-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </button>
          <a 
            href="#services" 
            data-translate="exploreServices"
            class="group border-2 border-gray-300 text-gray-700 px-6 sm:px-8 py-3 sm:py-4 rounded-2xl hover:border-blue-600 hover:text-blue-600 hover:bg-blue-50/50 transition-all duration-300 font-semibold text-base sm:text-lg text-center backdrop-blur-sm"
          >
            <span class="flex items-center justify-center space-x-2">
              <span>Explore Services</span>
              <svg class="w-4 h-4 sm:w-5 sm:h-5 transform group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </span>
          </a>
        </div>
        
      </div>
      
      <!-- Hero Visual -->
      <div class="relative animate-slide-right order-1 lg:order-2">
        <!-- Main Card with enhanced effects -->
        <div class="relative bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl p-6 sm:p-8 transform rotate-1 hover:rotate-0 hover:scale-105 transition-all duration-700 border border-white/20 animate-card-float card-glow group-card">
          <!-- Header -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Booking Confirmed</h3>
                <p class="text-sm text-gray-500">ID: #BW2024</p>
              </div>
            </div>
            <span class="bg-green-100 text-green-800 px-3 sm:px-4 py-1.5 sm:py-2 rounded-xl text-xs sm:text-sm font-semibold animate-pulse">âœ“ Confirmed</span>
          </div>
          
          <!-- Booking Details -->
          <div class="space-y-3 sm:space-y-4">
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm sm:text-base">Personal Training Session</div>
                <div class="text-xs sm:text-sm text-gray-600">with Sarah Johnson</div>
              </div>
              <div class="text-right flex-shrink-0 hidden sm:block">
                <div class="text-xs text-gray-500">Duration</div>
                <div class="font-semibold text-gray-900 text-sm">60 min</div>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gradient-to-r from-orange-50 to-pink-50 rounded-2xl">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-orange-500 to-pink-600 rounded-xl flex items-center justify-center shadow-lg flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm sm:text-base">December 15, 2024</div>
                <div class="text-xs sm:text-sm text-gray-600">10:00 AM - 11:00 AM</div>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gradient-to-r from-emerald-50 to-teal-50 rounded-2xl">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm sm:text-base">Elite Fitness Center</div>
                <div class="text-xs sm:text-sm text-gray-600">5th Floor, Building A</div>
              </div>
            </div>
          </div>
          
          <!-- Price -->
          <div class="mt-4 sm:mt-6 pt-4 sm:pt-6 border-t border-gray-100">
            <div class="flex justify-between items-center">
              <span class="text-gray-600 font-medium text-sm sm:text-base">Total Amount</span>
              <span class="text-xl sm:text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">$75</span>
            </div>
          </div>
        </div>
        
        <!-- Enhanced Floating Elements -->
        <div class="absolute -top-4 -right-4 sm:-top-6 sm:-right-6 w-16 h-16 sm:w-24 sm:h-24 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full animate-bounce-gentle shadow-xl opacity-80 hover:scale-110 transition-transform duration-300"></div>
        <div class="absolute -bottom-6 -left-6 sm:-bottom-8 sm:-left-8 w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-pink-400 to-purple-500 rounded-full animate-pulse-gentle shadow-xl opacity-80 hover:scale-110 transition-transform duration-300"></div>
        <div class="absolute top-1/2 -right-8 sm:-right-12 w-6 h-6 sm:w-8 sm:h-8 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full animate-ping-gentle opacity-60"></div>
        <div class="absolute top-1/4 -left-4 w-4 h-4 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full animate-float animation-delay-2000 opacity-70"></div>
        <div class="absolute bottom-1/4 -right-2 w-3 h-3 bg-gradient-to-br from-violet-400 to-indigo-500 rounded-full animate-float animation-delay-4000 opacity-60"></div>
        
        <!-- Secondary Cards -->
        <div class="absolute -bottom-3 -right-6 sm:-bottom-4 sm:-right-8 bg-white/90 backdrop-blur-lg rounded-2xl p-3 sm:p-4 shadow-xl transform rotate-6 hover:rotate-3 transition-transform duration-300">
          <div class="flex items-center space-x-2">
            <div class="w-6 h-6 sm:w-8 sm:h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-xs font-semibold text-gray-900">5-Star Rating</div>
              <div class="text-xs text-gray-600 hidden sm:block">Verified Reviews</div>
            </div>
          </div>
        </div>
        
        <div class="absolute -top-6 -left-6 sm:-top-8 sm:-left-8 bg-white/90 backdrop-blur-lg rounded-2xl p-3 sm:p-4 shadow-xl transform -rotate-6 hover:-rotate-3 transition-transform duration-300">
          <div class="flex items-center space-x-2">
            <div class="w-6 h-6 sm:w-8 sm:h-8 bg-gradient-to-br from-green-500 to-emerald-500 rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-xs font-semibold text-gray-900">Instant Booking</div>
              <div class="text-xs text-gray-600 hidden sm:block">No Wait Time</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Enhanced blob animation with more organic movement */
  @keyframes blob-slow {
    0%, 100% { 
      transform: translate(0px, 0px) scale(1) rotate(0deg); 
    }
    25% { 
      transform: translate(20px, -30px) scale(1.05) rotate(90deg); 
    }
    50% { 
      transform: translate(-15px, 25px) scale(0.95) rotate(180deg); 
    }
    75% { 
      transform: translate(25px, 10px) scale(1.1) rotate(270deg); 
    }
  }
  
  /* Gentle bounce animation */
  @keyframes bounce-gentle {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-15px) scale(1.05); }
  }
  
  /* Subtle pulse animation */
  @keyframes pulse-gentle {
    0%, 100% { transform: scale(1); opacity: 0.8; }
    50% { transform: scale(1.1); opacity: 0.6; }
  }
  
  /* Gentle ping animation */
  @keyframes ping-gentle {
    0% { transform: scale(1); opacity: 0.6; }
    75%, 100% { transform: scale(1.5); opacity: 0; }
  }
  
  /* Floating animation */
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(90deg); }
    50% { transform: translateY(-5px) rotate(180deg); }
    75% { transform: translateY(-12px) rotate(270deg); }
  }
  
  /* Slow pulse for background elements */
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.1; }
    50% { opacity: 0.15; }
  }
  
  /* Grid floating animation */
  @keyframes grid-float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-2px); }
  }
  
  /* Card floating animation */
  @keyframes card-float {
    0%, 100% { transform: translateY(0px) rotate(1deg); }
    50% { transform: translateY(-5px) rotate(0.5deg); }
  }
  
  /* Slide up animation */
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Slide right animation */
  @keyframes slide-right {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Animation classes */
  .animate-blob-slow {
    animation: blob-slow 12s infinite ease-in-out;
  }
  
  .animate-bounce-gentle {
    animation: bounce-gentle 4s infinite ease-in-out;
  }
  
  .animate-pulse-gentle {
    animation: pulse-gentle 3s infinite ease-in-out;
  }
  
  .animate-ping-gentle {
    animation: ping-gentle 2s infinite ease-out;
  }
  
  .animate-float {
    animation: float 6s infinite ease-in-out;
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 8s infinite ease-in-out;
  }
  
  .animate-grid-float {
    animation: grid-float 8s infinite ease-in-out;
  }
  
  .animate-card-float {
    animation: card-float 6s infinite ease-in-out;
  }
  
  .animate-slide-up {
    animation: slide-up 1s ease-out;
  }
  
  .animate-slide-right {
    animation: slide-right 1s ease-out 0.3s both;
  }
  
  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient 4s ease infinite;
  }
  
  /* Animation delays */
  .animation-delay-500 {
    animation-delay: 0.5s;
  }
  
  .animation-delay-1000 {
    animation-delay: 1s;
  }
  
  .animation-delay-1500 {
    animation-delay: 1.5s;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-3000 {
    animation-delay: 3s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  .bg-grid-slate-100 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(148 163 184 / 0.05)'%3e%3cpath d='m0 .5h32m-32 32v-32'/%3e%3c/svg%3e");
  }

  /* Performance optimizations */
  .animate-blob-slow,
  .animate-bounce-gentle,
  .animate-pulse-gentle,
  .animate-float,
  .animate-card-float {
    will-change: transform;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .hero-visual {
      padding: 1rem;
    }
    
    .floating-element {
      display: none;
    }
    
    .secondary-card {
      transform: scale(0.8);
    }
    
    /* Reduce animations on mobile for better performance */
    .animate-blob-slow,
    .animate-pulse-slow {
      animation-duration: 8s;
    }
  }
  
  /* Enhanced particle animations */
  @keyframes particle-float {
    0%, 100% { 
      transform: translateY(0px) translateX(0px) rotate(0deg) scale(1); 
      opacity: 0.6;
    }
    25% { 
      transform: translateY(-20px) translateX(10px) rotate(90deg) scale(1.2); 
      opacity: 0.8;
    }
    50% { 
      transform: translateY(-10px) translateX(-5px) rotate(180deg) scale(0.8); 
      opacity: 1;
    }
    75% { 
      transform: translateY(-25px) translateX(15px) rotate(270deg) scale(1.1); 
      opacity: 0.7;
    }
  }
  
  @keyframes grid-wave {
    0%, 100% { 
      transform: translateY(0px) rotateX(0deg); 
      opacity: 0.3;
    }
    50% { 
      transform: translateY(-3px) rotateX(1deg); 
      opacity: 0.4;
    }
  }
  
  @keyframes light-ray {
    0%, 100% { 
      opacity: 0.1; 
      transform: scaleY(0.8) translateY(0px);
    }
    50% { 
      opacity: 0.3; 
      transform: scaleY(1.2) translateY(-10px);
    }
  }
  
  @keyframes magical-glow-pulse {
    0%, 100% { 
      box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    }
    50% { 
      box-shadow: 0 0 40px rgba(59, 130, 246, 0.5), 0 0 60px rgba(59, 130, 246, 0.2);
    }
  }
  
  @keyframes card-glow {
    0%, 100% { 
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
    50% { 
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(59, 130, 246, 0.1), 0 0 30px rgba(59, 130, 246, 0.1);
    }
  }
  
  /* Enhanced animation classes */
  .animate-particle-float {
    animation: particle-float 8s infinite ease-in-out;
  }
  
  .animate-grid-wave {
    animation: grid-wave 12s infinite ease-in-out;
  }
  
  .animate-light-ray {
    animation: light-ray 10s infinite ease-in-out;
  }
  
  .magical-glow {
    position: relative;
  }
  
  .magical-glow::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    border-radius: inherit;
    opacity: 0;
    animation: magical-glow-pulse 4s infinite ease-in-out;
    pointer-events: none;
  }
  
  .magical-glow-blue::before {
    background: linear-gradient(45deg, rgba(59, 130, 246, 0.4), rgba(147, 51, 234, 0.4));
  }
  
  .magical-glow-purple::before {
    background: linear-gradient(45deg, rgba(147, 51, 234, 0.4), rgba(219, 39, 119, 0.4));
  }
  
  .magical-glow-pink::before {
    background: linear-gradient(45deg, rgba(219, 39, 119, 0.4), rgba(59, 130, 246, 0.4));
  }
  
  .card-glow {
    animation: card-glow 6s infinite ease-in-out;
  }
  
  .particle-trail {
    position: relative;
  }
  
  .particle-trail::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, currentColor 0%, transparent 70%);
    opacity: 0.2;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    animation: pulse 3s infinite ease-in-out;
    pointer-events: none;
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .animate-blob-slow,
    .animate-bounce-gentle,
    .animate-pulse-gentle,
    .animate-ping-gentle,
    .animate-float,
    .animate-pulse-slow,
    .animate-grid-float,
    .animate-card-float,
    .animate-particle-float,
    .animate-grid-wave,
    .animate-light-ray,
    .magical-glow,
    .card-glow,
    .particle-trail {
      animation: none;
    }
    
    .magical-glow::before,
    .particle-trail::after {
      display: none;
    }
  }
</style>