---

<section class="relative pt-28 pb-20 overflow-hidden">
  <!-- Minimal Background -->
  <div class="absolute inset-0 bg-gray-50 overflow-hidden">
    <!-- Minimal decorative elements -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(15 23 42 / 0.02)'%3e%3cpath d='m0 .5h32m-32 32v-32'/%3e%3c/svg%3e')] opacity-50"></div>
  </div>
  
  <div class="container mx-auto px-4 relative">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="space-y-6 lg:space-y-8 animate-slide-up order-2 lg:order-1">
        
        <div class="space-y-4 lg:space-y-6">
          <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold text-gray-900 leading-tight">
            <span data-translate="heroTitle">Book Services</span>
            <span class="relative block">
              <span data-translate="heroSubtitle" class="text-gray-900">
                Seamlessly
              </span>
              <div class="absolute -bottom-2 left-0 w-full h-1 bg-gray-900 rounded-full"></div>
            </span>
          </h1>
          <p data-translate="heroDescription" class="text-lg sm:text-xl lg:text-2xl text-gray-600 leading-relaxed max-w-2xl">
            The ultimate booking platform for 
            <span class="font-semibold text-gray-800">Personal Trainers</span>, 
            <span class="font-semibold text-gray-800">Retail</span>, 
            <span class="font-semibold text-gray-800">Events</span>, and more.
            <br>
            <span data-translate="heroTagline" class="text-base lg:text-lg text-gray-500">Enterprise-grade. Simple to use.</span>
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <button 
            onclick="openBookingModal()"
            data-translate="startBookingNow"
            class="group bg-gray-900 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-2xl hover:bg-gray-800 transition-all duration-300 font-semibold text-base sm:text-lg relative"
          >
            <span class="relative z-10 flex items-center justify-center space-x-2">
              <span>Start Booking Now</span>
              <svg class="w-4 h-4 sm:w-5 sm:h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </span>
          </button>
          <a 
            href="#services" 
            data-translate="exploreServices"
            class="group border-2 border-gray-300 text-gray-700 px-6 sm:px-8 py-3 sm:py-4 rounded-2xl hover:border-gray-900 hover:text-gray-900 hover:bg-gray-50 transition-all duration-300 font-semibold text-base sm:text-lg text-center"
          >
            <span class="flex items-center justify-center space-x-2">
              <span>Explore Services</span>
              <svg class="w-4 h-4 sm:w-5 sm:h-5 transform group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </span>
          </a>
        </div>
        
      </div>
      
      <!-- Hero Visual -->
      <div class="relative animate-slide-right order-1 lg:order-2">
        <!-- Main Card with enhanced effects -->
        <div class="relative bg-white rounded-3xl shadow-xl p-6 sm:p-8 transform rotate-1 hover:rotate-0 transition-all duration-500 border border-gray-100">
          <!-- Header -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gray-900 rounded-2xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Booking Confirmed</h3>
                <p class="text-sm text-gray-500">ID: #BW2024</p>
              </div>
            </div>
            <span class="bg-green-100 text-green-800 px-3 sm:px-4 py-1.5 sm:py-2 rounded-xl text-xs sm:text-sm font-semibold animate-pulse">âœ“ Confirmed</span>
          </div>
          
          <!-- Booking Details -->
          <div class="space-y-3 sm:space-y-4">
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gray-50 rounded-2xl">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gray-900 rounded-xl flex items-center justify-center shadow-lg flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm sm:text-base">Personal Training Session</div>
                <div class="text-xs sm:text-sm text-gray-600">with Sarah Johnson</div>
              </div>
              <div class="text-right flex-shrink-0 hidden sm:block">
                <div class="text-xs text-gray-500">Duration</div>
                <div class="font-semibold text-gray-900 text-sm">60 min</div>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gray-50 rounded-2xl">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gray-900 rounded-xl flex items-center justify-center shadow-lg flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm sm:text-base">December 15, 2024</div>
                <div class="text-xs sm:text-sm text-gray-600">10:00 AM - 11:00 AM</div>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gray-50 rounded-2xl">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gray-900 rounded-xl flex items-center justify-center shadow-lg flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm sm:text-base">Elite Fitness Center</div>
                <div class="text-xs sm:text-sm text-gray-600">5th Floor, Building A</div>
              </div>
            </div>
          </div>
          
          <!-- Price -->
          <div class="mt-4 sm:mt-6 pt-4 sm:pt-6 border-t border-gray-100">
            <div class="flex justify-between items-center">
              <span class="text-gray-600 font-medium text-sm sm:text-base">Total Amount</span>
              <span class="text-xl sm:text-2xl font-bold text-gray-900">$75</span>
            </div>
          </div>
        </div>
        
        <!-- Minimal Floating Elements -->
        <div class="absolute -top-4 -right-4 sm:-top-6 sm:-right-6 w-6 h-6 sm:w-8 sm:h-8 bg-gray-300 rounded-full opacity-60"></div>
        <div class="absolute -bottom-6 -left-6 sm:-bottom-8 sm:-left-8 w-4 h-4 sm:w-6 sm:h-6 bg-gray-400 rounded-full opacity-50"></div>
        
        <!-- Secondary Cards -->
        <div class="absolute -bottom-3 -right-6 sm:-bottom-4 sm:-right-8 bg-white rounded-2xl p-3 sm:p-4 shadow-lg transform rotate-6 border border-gray-100">
          <div class="flex items-center space-x-2">
            <div class="w-6 h-6 sm:w-8 sm:h-8 bg-gray-900 rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-xs font-semibold text-gray-900">5-Star Rating</div>
              <div class="text-xs text-gray-600 hidden sm:block">Verified Reviews</div>
            </div>
          </div>
        </div>
        
        <div class="absolute -top-6 -left-6 sm:-top-8 sm:-left-8 bg-white rounded-2xl p-3 sm:p-4 shadow-lg transform -rotate-6 border border-gray-100">
          <div class="flex items-center space-x-2">
            <div class="w-6 h-6 sm:w-8 sm:h-8 bg-gray-900 rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-xs font-semibold text-gray-900">Instant Booking</div>
              <div class="text-xs text-gray-600 hidden sm:block">No Wait Time</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Minimal animations */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Minimal animations */
  .fade-in {
    animation: fade-in 0.6s ease-out;
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .hero-visual {
      padding: 1rem;
    }
    
    .secondary-card {
      transform: scale(0.8);
    }
  }
</style>