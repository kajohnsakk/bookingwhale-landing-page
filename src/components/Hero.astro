</section>

<style>
  /* Enhanced animations for engaging hero section */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fade-in-right {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes float-slow {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
    }
    50% { 
      transform: translateY(-15px) rotate(5deg); 
    }
  }
  
  @keyframes float-delayed {
    0%, 100% { 
      transform: translateY(0px) translateX(0px); 
    }
    33% { 
      transform: translateY(-10px) translateX(5px); 
    }
    66% { 
      transform: translateY(-5px) translateX(-3px); 
    }
  }
  
  @keyframes float-gentle {
    0%, 100% { 
      transform: translateY(0px); 
    }
    50% { 
      transform: translateY(-8px); 
    }
  }
  
  @keyframes bounce-gentle {
    0%, 100% { 
      transform: translateY(0px) scale(1); 
    }
    50% { 
      transform: translateY(-10px) scale(1.05); 
    }
  }
  
  @keyframes pulse-gentle {
    0%, 100% { 
      opacity: 0.5;
      transform: scale(1); 
    }
    50% { 
      opacity: 0.8;
      transform: scale(1.1); 
    }
  }
  
  @keyframes rotate-slow {
    from { 
      transform: rotate(0deg); 
    }
    to { 
      transform: rotate(360deg); 
    }
  }
  
  @keyframes card-hover {
    0%, 100% { 
      transform: translateY(0px) rotate(1deg); 
    }
    50% { 
      transform: translateY(-5px) rotate(0.5deg); 
    }
  }
  
  /* Animation classes */
  .fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }
  
  .fade-in-right {
    animation: fade-in-right 0.8s ease-out 0.2s both;
  }
  
  .animate-float-slow {
    animation: float-slow 6s infinite ease-in-out;
  }
  
  .animate-float-delayed {
    animation: float-delayed 8s infinite ease-in-out 2s;
  }
  
  .animate-float-gentle {
    animation: float-gentle 4s infinite ease-in-out 1s;
  }
  
  .animate-bounce-gentle {
    animation: bounce-gentle 3s infinite ease-in-out;
  }
  
  .animate-pulse-gentle {
    animation: pulse-gentle 4s infinite ease-in-out 1.5s;
  }
  
  .animate-rotate-slow {
    animation: rotate-slow 20s infinite linear;
  }
  
  .animate-card-hover {
    animation: card-hover 6s infinite ease-in-out;
  }
  
  /* Performance optimizations */
  .animate-float-slow,
  .animate-float-delayed,
  .animate-float-gentle,
  .animate-bounce-gentle,
  .animate-pulse-gentle,
  .animate-card-hover {
    will-change: transform;
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .hero-visual {
      padding: 1rem;
    }
    
    .secondary-card {
      transform: scale(0.8);
    }
    
    /* Reduce animation intensity on mobile */
    .animate-float-slow,
    .animate-float-delayed,
    .animate-rotate-slow {
      animation-duration: 8s;
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .fade-in-up,
    .fade-in-right,
    .animate-float-slow,
    .animate-float-delayed,
    .animate-float-gentle,
    .animate-bounce-gentle,
    .animate-pulse-gentle,
    .animate-rotate-slow,
    .animate-card-hover {
      animation: none;
    }
  }

  /* LINE OA Green color */
  .line-oa-green {
    color: #06d755 !important;
    font-weight: bold !important;
  }
</style>