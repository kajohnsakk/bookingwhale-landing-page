              <div class="text-xs text-gray-600 hidden sm:block">Webview App</div>
            </div>
          </div>
        </div>

        <div class="absolute -top-6 -left-6 sm:-top-8 sm:-left-8 bg-white rounded-2xl p-3 sm:p-4 shadow-lg transform -rotate-6 hover:-rotate-3 transition-transform duration-500 border border-gray-100 animate-float-gentle">
