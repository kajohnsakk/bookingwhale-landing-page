<section class="relative pt-24 pb-12 lg:pt-28 lg:pb-16 overflow-hidden bg-darker">
  <!-- Dark Theme Background -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Dime-style geometric elements -->
    <div class="absolute top-20 left-10 w-40 h-40 bg-blue-500/20 rounded-3xl rotate-12 animate-float-slow"></div>
    <div class="absolute bottom-20 right-10 w-32 h-32 bg-green-400/20 rounded-full animate-float-delayed"></div>
    <div class="absolute top-1/3 right-1/3 w-24 h-24 bg-green-400/10 rounded-2xl rotate-45 animate-pulse-gentle"></div>
    
    <!-- Subtle grid pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(15 23 42 / 0.02)'%3e%3cpath d='m0 .5h32m-32 32v-32'/%3e%3c/svg%3e')] opacity-50"></div>
  </div>
  
  <div class="container-tight relative">
    <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
      <div class="lg:col-span-7 space-y-6 fade-in-up order-2 lg:order-1">
        <div class="space-y-4">
          <h1 class="text-display text-2xl sm:text-3xl lg:text-4xl xl:text-5xl">
            <span data-translate="heroTitle" class="block text-white">จอง. จ่าย. ใช้.</span>
            <span class="text-white block text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-black" data-translate="heroSubtitle">
              BookingWhale
            </span>
          </h1>
          <p data-translate="heroDescription" class="text-lg text-gray-light max-w-2xl font-light">
            แพลตฟอร์มจองบริการที่ทำให้ธุรกิจของคุณเติบโตได้ง่ายขึ้น
          </p>
        </div>
        
        <div class="flex justify-center sm:justify-start">
          <button 
            onclick="openBookingModal()"
            data-translate="startBookingNow"
            class="btn btn-primary btn-large"
          >
            <span>เริ่มจองเลย!</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </button>
        </div>
        
        <!-- Pre-launch stats -->
        <div class="flex items-center space-x-12 pt-6">
          <div>
            <div class="text-4xl font-black text-green-400">Beta</div>
            <div class="text-gray text-sm font-medium" data-translate="activeUsers">เปิดทดลอง</div>
          </div>
          <div>
            <div class="text-4xl font-black text-blue-400">FREE</div>
            <div class="text-gray text-sm font-medium">ใช้ฟรี</div>
          </div>
          <div>
            <div class="text-4xl font-black text-blue-400">24/7</div>
            <div class="text-gray text-sm font-medium" data-translate="support">สนับสนุน</div>
          </div>
        </div>
        
      </div>
      
      <!-- Hero Visual -->
      <div class="lg:col-span-5 relative fade-in-right order-1 lg:order-2">
        <!-- Modern Card Design -->
        <div class="relative bg-white rounded-3xl shadow-2xl p-8 transform rotate-2 hover:rotate-0 hover:scale-105 transition-all duration-700 border border-gray-100/50 backdrop-blur-sm">
          <!-- Header -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gray-900 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h3 class="text-base font-bold text-gray-900">Booking Confirmed</h3>
                <p class="text-sm text-gray-500">ID: #BW2024</p>
              </div>
            </div>
            <span class="bg-green-100 text-green-800 px-3 py-1.5 rounded-full text-xs font-semibold">✓ Confirmed</span>
          </div>
          
          <!-- Booking Details -->
          <div class="space-y-3">
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gray-50 rounded-2xl">
              <div class="w-10 h-10 bg-gray-900 rounded-lg flex items-center justify-center shadow-md flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm">Personal Training Session</div>
                <div class="text-xs text-gray-600">with Sarah Johnson</div>
              </div>
              <div class="text-right flex-shrink-0 hidden sm:block">
                <div class="text-xs text-gray-500">Duration</div>
                <div class="font-semibold text-gray-900 text-sm">60 min</div>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gray-50 rounded-2xl">
              <div class="w-10 h-10 bg-gray-900 rounded-lg flex items-center justify-center shadow-md flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm">December 15, 2024</div>
                <div class="text-xs text-gray-600">10:00 AM - 11:00 AM</div>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gray-50 rounded-2xl">
              <div class="w-10 h-10 bg-gray-900 rounded-lg flex items-center justify-center shadow-md flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 text-sm">Elite Fitness Center</div>
                <div class="text-xs text-gray-600">5th Floor, Building A</div>
              </div>
            </div>
          </div>
          
          <!-- Price -->
          <div class="mt-5 pt-5 border-t border-gray-100">
            <div class="flex justify-between items-center">
              <span class="text-gray-600 font-medium text-sm">Total Amount</span>
              <span class="text-xl font-bold text-gray-900">$75</span>
            </div>
          </div>
        </div>
        
        <!-- Animated Floating Elements -->
        <div class="absolute -top-4 -right-4 sm:-top-6 sm:-right-6 w-6 h-6 sm:w-8 sm:h-8 bg-blue-300 rounded-full opacity-60 animate-bounce-gentle"></div>
        <div class="absolute -bottom-6 -left-6 sm:-bottom-8 sm:-left-8 w-4 h-4 sm:w-6 sm:h-6 bg-blue-400 rounded-full opacity-50 animate-pulse-gentle"></div>
        <div class="absolute top-1/2 -left-2 w-3 h-3 bg-blue-300 rounded-full opacity-40 animate-float-slow"></div>
        <div class="absolute top-1/4 -right-2 w-5 h-5 bg-blue-400 rounded-lg opacity-30 animate-rotate-slow"></div>
        
        <!-- Secondary Cards -->
        <div class="absolute -bottom-3 -right-6 sm:-bottom-4 sm:-right-8 bg-white rounded-2xl p-3 sm:p-4 shadow-lg transform rotate-6 hover:rotate-3 transition-transform duration-500 border border-gray-100 animate-float-delayed">
          <div class="flex items-center space-x-2">
            <div class="w-6 h-6 sm:w-8 sm:h-8 bg-blue-600 rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-xs font-semibold text-gray-900">5-Star Rating</div>
              <div class="text-xs text-gray-600 hidden sm:block">Verified Reviews</div>
            </div>
          </div>
        </div>
        
        <div class="absolute -top-6 -left-6 sm:-top-8 sm:-left-8 bg-white rounded-2xl p-3 sm:p-4 shadow-lg transform -rotate-6 hover:-rotate-3 transition-transform duration-500 border border-gray-100 animate-float-gentle">
          <div class="flex items-center space-x-2">
            <div class="w-6 h-6 sm:w-8 sm:h-8 bg-blue-600 rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-xs font-semibold text-gray-900">Instant Booking</div>
              <div class="text-xs text-gray-600 hidden sm:block">No Wait Time</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Enhanced animations for engaging hero section */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fade-in-right {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes float-slow {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
    }
    50% { 
      transform: translateY(-15px) rotate(5deg); 
    }
  }
  
  @keyframes float-delayed {
    0%, 100% { 
      transform: translateY(0px) translateX(0px); 
    }
    33% { 
      transform: translateY(-10px) translateX(5px); 
    }
    66% { 
      transform: translateY(-5px) translateX(-3px); 
    }
  }
  
  @keyframes float-gentle {
    0%, 100% { 
      transform: translateY(0px); 
    }
    50% { 
      transform: translateY(-8px); 
    }
  }
  
  @keyframes bounce-gentle {
    0%, 100% { 
      transform: translateY(0px) scale(1); 
    }
    50% { 
      transform: translateY(-10px) scale(1.05); 
    }
  }
  
  @keyframes pulse-gentle {
    0%, 100% { 
      opacity: 0.5;
      transform: scale(1); 
    }
    50% { 
      opacity: 0.8;
      transform: scale(1.1); 
    }
  }
  
  @keyframes rotate-slow {
    from { 
      transform: rotate(0deg); 
    }
    to { 
      transform: rotate(360deg); 
    }
  }
  
  @keyframes card-hover {
    0%, 100% { 
      transform: translateY(0px) rotate(1deg); 
    }
    50% { 
      transform: translateY(-5px) rotate(0.5deg); 
    }
  }
  
  /* Animation classes */
  .fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }
  
  .fade-in-right {
    animation: fade-in-right 0.8s ease-out 0.2s both;
  }
  
  .animate-float-slow {
    animation: float-slow 6s infinite ease-in-out;
  }
  
  .animate-float-delayed {
    animation: float-delayed 8s infinite ease-in-out 2s;
  }
  
  .animate-float-gentle {
    animation: float-gentle 4s infinite ease-in-out 1s;
  }
  
  .animate-bounce-gentle {
    animation: bounce-gentle 3s infinite ease-in-out;
  }
  
  .animate-pulse-gentle {
    animation: pulse-gentle 4s infinite ease-in-out 1.5s;
  }
  
  .animate-rotate-slow {
    animation: rotate-slow 20s infinite linear;
  }
  
  .animate-card-hover {
    animation: card-hover 6s infinite ease-in-out;
  }
  
  /* Performance optimizations */
  .animate-float-slow,
  .animate-float-delayed,
  .animate-float-gentle,
  .animate-bounce-gentle,
  .animate-pulse-gentle,
  .animate-card-hover {
    will-change: transform;
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .hero-visual {
      padding: 1rem;
    }
    
    .secondary-card {
      transform: scale(0.8);
    }
    
    /* Reduce animation intensity on mobile */
    .animate-float-slow,
    .animate-float-delayed,
    .animate-rotate-slow {
      animation-duration: 8s;
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .fade-in-up,
    .fade-in-right,
    .animate-float-slow,
    .animate-float-delayed,
    .animate-float-gentle,
    .animate-bounce-gentle,
    .animate-pulse-gentle,
    .animate-rotate-slow,
    .animate-card-hover {
      animation: none;
    }
  }
</style>