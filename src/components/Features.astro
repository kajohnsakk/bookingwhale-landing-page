---
const features = [
  {
    title: 'Enterprise Architecture',
    description: 'Scalable, cloud-native infrastructure designed to handle complex enterprise workloads with optimal performance.',
    icon: 'ease',
    color: 'blue'
  },
  {
    title: 'Advanced Security',
    description: 'Multi-layered security framework with SOC 2 compliance, end-to-end encryption, and zero-trust architecture.',
    icon: 'security',
    color: 'green'
  },
  {
    title: 'Premium Support',
    description: 'Dedicated account management with 24/7 technical support, SLA guarantees, and priority escalation.',
    icon: 'support',
    color: 'purple'
  },
  {
    title: 'Omnichannel Platform',
    description: 'Unified experience across all touchpoints with seamless integration and consistent user interface.',
    icon: 'platform',
    color: 'orange'
  },
  {
    title: 'Advanced Analytics',
    description: 'Real-time business intelligence with customizable dashboards, predictive analytics, and automated reporting.',
    icon: 'payment',
    color: 'indigo'
  },
  {
    title: 'API-First Design',
    description: 'Comprehensive REST and GraphQL APIs enabling seamless third-party integrations and custom development.',
    icon: 'cancel',
    color: 'red'
  }
];

const getIcon = (type: string) => {
  switch (type) {
    case 'ease':
      return `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
        <path d="M12 6l-1.5 3H7l2.5 2-1 3L12 12l3.5 2-1-3L17 9h-3.5L12 6z"/>
        <circle cx="12" cy="12" r="2"/>
      </svg>`;
    case 'security':
      return `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
        <path d="M10 17l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z" fill="white"/>
      </svg>`;
    case 'support':
      return `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
        <path d="M12 6c-3.31 0-6 2.69-6 6h2c0-2.21 1.79-4 4-4s4 1.79 4 4c0 1.1-.45 2.1-1.17 2.83-.74.74-1.83 1.17-2.83 1.17v2c1.66 0 3.16-.63 4.24-1.76S18 13.66 18 12c0-3.31-2.69-6-6-6z"/>
        <circle cx="12" cy="19" r="1"/>
      </svg>`;
    case 'platform':
      return `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M4 6h16v2H4zm0 5h16v6c0 1.1-.9 2-2 2H6c-1.1 0-2-.9-2-2v-6zm16-7H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2z"/>
        <circle cx="7" cy="14" r="1"/>
        <circle cx="12" cy="14" r="1"/>
        <circle cx="17" cy="14" r="1"/>
      </svg>`;
    case 'payment':
      return `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8h16v10z"/>
        <path d="M6 12h2v2H6zm4 0h8v2h-8z"/>
        <circle cx="18" cy="15" r="1"/>
      </svg>`;
    case 'cancel':
      return `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
        <path d="M12 10.59l4.24-4.24 1.41 1.41L13.41 12l4.24 4.24-1.41 1.41L12 13.41l-4.24 4.24-1.41-1.41L10.59 12 6.35 7.76l1.41-1.41L12 10.59z"/>
        <path d="M16 8l-4 4-4-4 1.41-1.41L12 9.17l2.59-2.58L16 8z" fill="white"/>
      </svg>`;
    default:
      return '';
  }
};

const getColorClasses = (color: string) => {
  return 'bg-gray-900';
};
---

<section id="features" class="py-24 bg-white relative overflow-hidden">
  <!-- Minimal Background -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(15 23 42 / 0.01)'%3e%3cpath d='m0 .5h32m-32 32v-32'/%3e%3c/svg%3e')] opacity-30 pointer-events-none"></div>
  
  <div class="container mx-auto px-4 relative">
    <div class="text-center mb-20">
      <div class="inline-flex items-center space-x-2 bg-gray-100 px-4 py-2 rounded-full border border-gray-200 mb-6">
        <div class="w-2 h-2 bg-gray-900 rounded-full"></div>
        <span data-translate="enterpriseFeatures" class="text-sm font-medium text-gray-900">Platform Capabilities</span>
      </div>
      <h2 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        <span data-translate="whyChoose">Why Choose</span> <span class="text-gray-900">Our Platform</span>
      </h2>
      <p data-translate="featuresDescription" class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
        Built for enterprise-scale operations with advanced capabilities that empower organizations to achieve operational excellence and drive digital transformation.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => {
        const colorClasses = getColorClasses(feature.color);
        return (
          <div class="group bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl border border-gray-100 hover:border-gray-200 transition-all duration-300 transform hover:-translate-y-1 relative overflow-hidden">
            
            <div class="relative z-10">
              <div class={`w-16 h-16 ${colorClasses} rounded-2xl flex items-center justify-center text-white mb-6 group-hover:scale-105 transition-all duration-300 shadow-lg`}>
                <Fragment set:html={getIcon(feature.icon)} />
              </div>
              
              <h3 data-translate={`feature${index + 1}Title`} class="text-2xl font-bold text-gray-900 mb-4 transition-colors">
                {feature.title}
              </h3>
              <p data-translate={`feature${index + 1}Desc`} class="text-gray-600 leading-relaxed">
                {feature.description}
              </p>
              
            </div>
          </div>
        );
      })}
    </div>
    
    <!-- Pricing CTA Section -->
    <div class="mt-20">
      <div class="bg-gray-50 rounded-3xl p-8 lg:p-12 shadow-lg border border-gray-200 relative overflow-hidden">
        
        <div class="relative z-10 text-center max-w-4xl mx-auto">
          <div class="inline-flex items-center space-x-2 bg-white px-4 py-2 rounded-full border border-gray-200 mb-6">
            <div class="w-2 h-2 bg-gray-900 rounded-full"></div>
            <span data-translate="freeToStart" class="text-sm font-medium text-gray-900">Free to Start</span>
          </div>
          
          <h3 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            <span data-translate="startFree">Enterprise Trial</span> <span class="text-gray-900">Available</span>
          </h3>
          <p data-translate="freeDescription" class="text-xl text-gray-600 mb-8 leading-relaxed">
            Experience our enterprise platform with a comprehensive trial. Custom pricing models available for enterprise deployments with dedicated support and professional services.
          </p>
          
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="flex items-center justify-center space-x-3 bg-white rounded-2xl p-4 border border-gray-200">
              <svg class="w-6 h-6 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span data-translate="noSetupFees" class="font-semibold text-gray-700">Enterprise Support</span>
            </div>
            <div class="flex items-center justify-center space-x-3 bg-white rounded-2xl p-4 border border-gray-200">
              <svg class="w-6 h-6 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span data-translate="noMonthlyFees" class="font-semibold text-gray-700">Custom Deployment</span>
            </div>
            <div class="flex items-center justify-center space-x-3 bg-white rounded-2xl p-4 border border-gray-200">
              <svg class="w-6 h-6 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span data-translate="payPerBooking" class="font-semibold text-gray-700">Scalable Pricing</span>
            </div>
          </div>
          
          <button 
            onclick="openBookingModal()"
            class="bg-gray-900 text-white px-10 py-4 rounded-2xl hover:bg-gray-800 transition-all duration-300 font-semibold text-lg group"
          >
            <span class="flex items-center justify-center space-x-2">
              <span data-translate="startFreeToday">Request Demo</span>
              <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .bg-grid-slate-100 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(148 163 184 / 0.1)'%3e%3cpath d='m0 .5h32m-32 32v-32'/%3e%3c/svg%3e");
  }
</style>