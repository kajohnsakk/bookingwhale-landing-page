---

<section id="features" class="section-padding bg-gray-50 relative overflow-hidden">
  <!-- Minimal Background -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(15 23 42 / 0.01)'%3e%3cpath d='m0 .5h32m-32 32v-32'/%3e%3c/svg%3e')] opacity-30 pointer-events-none"></div>
  
  <div class="container-tight relative">
    <div class="text-center mb-12">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 mb-4 relative inline-block">
          <span data-translate="whyChoose" class="relative z-10">แพลตฟอร์มของเรา</span>
          <div class="absolute bottom-2 left-0 right-0 h-3 bg-blue-700 opacity-50 -skew-x-12 transform origin-bottom-left"></div>
        </h2>
        <p data-translate="featuresDescription" class="text-base lg:text-lg font-normal leading-relaxed text-gray-600 max-w-3xl mx-auto">
          BookingWhale application aims to provide low-cost, convenient, and smart access to booking services, payment solutions, business management tools, and customer support for everyone.
        </p>
      </div>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
        {features.map((feature, index) => {
          return (
            <div class="group bg-white rounded-xl border border-gray-200 hover:border-gray-300 hover:shadow-lg transition-all duration-200 p-6 text-center">
              {/* Vector illustration */}
              <div class="mb-6 transform group-hover:scale-110 transition-all duration-500 flex justify-center items-center">
                <Fragment set:html={getIllustration(feature.icon)} />
              </div>
              
              {/* Content */}
              <h3 data-translate={`feature${index + 1}Title`} class="text-lg font-semibold text-gray-900 mb-2">
                {feature.title}
              </h3>
              <p data-translate={`feature${index + 1}Desc`} class="text-sm text-gray-600 leading-relaxed">
                {feature.description}
              </p>
            </div>
          );
        })}
      </div>
    </div>
    
    <!-- CTA Section - Enhanced with Interactive Elements -->
    <div class="mt-16 lg:mt-20">
